<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recycler_view">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_width</item>
        <item name="android:scrollbarThumbVertical">@color/scrollbar_thumb_color</item>
        <item name="android:scrollbarTrackVertical">@color/scrollbar_track_color</item>
    </style>

</resources>
